<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/modal_bg">

    <ImageView
        android:id="@+id/iconCheck"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/check_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/msgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI Verificado"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iconCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/msgSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puedes continuar con tu registro"
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/msgTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Continuar"
        android:background="@drawable/button_green"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/msgSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
