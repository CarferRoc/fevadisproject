<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F7">

    <!-- BACK -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de Administrador"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <!-- TABS -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#CDE7CD"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabUsers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Usuarios"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tabInscripciones"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Inscripciones"
            android:textColor="#666"/>

        <TextView
            android:id="@+id/tabActividades"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Actividades"
            android:textColor="#666"/>

        <TextView
            android:id="@+id/tabDni"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DNIs"
            android:textColor="#666"/>
    </LinearLayout>

    <!-- CARD PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- ================= USUARIOS ================= -->
            <LinearLayout
                android:id="@+id/layoutUsers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- TÍTULO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_users"
                        app:tint="#000"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:text="Gestión de Usuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#000"/>

                        <TextView
                            android:text="Administra los usuarios de tu aplicación"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#666"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#DDDDDD"/>

                <!-- SCROLL HORIZONTAL ÚNICO -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- CABECERA -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:background="#E8F3E8">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:text="Nombre"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="DNI"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Puntos"
                                android:textStyle="bold"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Correo"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Nacimiento"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="Rol"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Acción"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- LISTA -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- ================= DNIs ================= -->
            <LinearLayout
                android:id="@+id/layoutDni"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_users"
                        app:tint="#333"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Autorizar DNIs"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Añade DNIs para permitir nuevos registros"
                            android:textSize="13sp"
                            android:textColor="#777"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- SEPARATOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginBottom="18dp"/>

                <!-- INPUT + BUTTON -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/inputDniAutorizar"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:hint="Introduce DNI (ej: 12345678A)"
                        android:background="@drawable/input_bg"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btnAutorizarDni"
                        android:layout_width="110dp"
                        android:layout_height="46dp"
                        android:text="Añadir DNI"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:backgroundTint="#B7EDD0"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>


            <!-- ========== ACTIVIDADES ========== -->
            <LinearLayout
                android:id="@+id/layoutActividades"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_activity"
                        app:tint="#000" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:text="Gestión de Actividades"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Administra las actividades de tu aplicación"
                            android:textSize="12sp"
                            android:textColor="#777"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#DDDDDD"/>

                <!-- BOTÓN NUEVA ACTIVIDAD -->
                <Button
                    android:id="@+id/btnNuevaActividad"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="＋ Nueva actividad"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textColor="#0A3D2E"
                    android:backgroundTint="#BEE7D0"
                    android:layout_gravity="end"/>

                <!-- CONTENEDOR LISTA -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/admin_list_container_bg">

                    <!-- TEXTO VACÍO -->
                    <TextView
                        android:id="@+id/textNoActividades"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No hay actividades registradas"
                        android:textColor="#888"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:visibility="gone"/>

                    <!-- LISTA -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerActividades"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

            </LinearLayout>


        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
