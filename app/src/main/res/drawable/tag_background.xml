<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del tag -->
    <solid android:color="#E8F3E8" />

    <!-- Bordes suaves redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#A7D3A5" />

    <!-- Relleno interno -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
