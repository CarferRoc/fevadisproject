<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F7">

    <!-- SAFE AREA -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topSafeArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"/>

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/topSafeArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titlePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- DIVIDER -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D1D1D1"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENIDO FIJO -->
    <LinearLayout
        android:id="@+id/staticContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FOTO PERFIL (REDUCIDA) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profilePicCard"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="110dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EAF8E8">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/logo_fevadis"/>
        </androidx.cardview.widget.CardView>

        <!-- EDIT FOTO (REDUCIDO) -->
        <ImageView
            android:id="@+id/iconEditPhoto"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_blue_dot"
            android:layout_marginTop="-24dp"
            android:layout_gravity="center"/>

        <!-- NOMBRE (MÁS PEQUEÑO Y MENOS MARGEN) -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <!-- TARJETA DE PUNTOS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPuntos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#4AA3E2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPuntos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 puntos"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnRecompensas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Recompensas"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#4AA3E2"
                    android:textSize="11sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TÍTULO AJUSTES -->
        <TextView
            android:id="@+id/labelAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- SCROLL AJUSTES -->
    <ScrollView
        android:id="@+id/scrollSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/staticContent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_container_bg"
            android:padding="15dp">

            <!-- ================= FILA 1 ================= -->
            <LinearLayout
                android:id="@+id/rowSettingInfo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/row_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="#4A4A4A"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Información Personal"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#888"/>
            </LinearLayout>

            <!-- ================= FILA 2 ================= -->
            <LinearLayout
                android:id="@+id/rowSettingUpload"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/row_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_upload"
                    app:tint="#4A4A4A"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Subir Archivos"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#888"/>
            </LinearLayout>

            <!-- ================= FILA 3 ================= -->
            <LinearLayout
                android:id="@+id/rowSettingActivity"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/row_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_activity"
                    app:tint="#4A4A4A"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Mi Actividad"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#888"/>
            </LinearLayout>

            <!-- ================= FILA 4 ================= -->
            <LinearLayout
                android:id="@+id/rowSettingAdmin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/row_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_admin"
                    app:tint="#4A4A4A"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Panel de Administración"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#888"/>
            </LinearLayout>

            <!-- ================= FILA 5 ================= -->
            <LinearLayout
                android:id="@+id/rowSettingLogout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/row_background_red"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    app:tint="#D32F2F"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Cerrar Sesión"
                    android:textColor="#D32F2F"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- NAVBAR -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@color/nav_green"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/navCalendarLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/navCalendar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_calendar"
                app:tint="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navChatLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/navChat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chat"
                app:tint="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navFolderLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/navFolder"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_folder"
                app:tint="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navUserLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/navUser"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_user"
                app:tint="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
