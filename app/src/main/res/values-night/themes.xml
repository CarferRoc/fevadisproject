<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Night Theme -->
    <style name="Base.Theme.FevadisProject" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores principales (igual que en light para evitar morados) -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryContainer">@color/green_primary_light</item>
        <item name="colorSecondary">@color/grey_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Evitar tint morados en botones -->
        <item name="buttonStyle">@style/FevadisButton</item>
        <item name="materialButtonStyle">@style/FevadisButton</item>

        <!-- Evitar ripple morado -->
        <item name="colorControlHighlight">@android:color/transparent</item>

        <!-- Desactivar tint automÃ¡tico -->
        <item name="android:colorAccent">@color/green_primary</item>

    </style>

    <!-- Wrapper -->
    <style name="Theme.FevadisProject" parent="Base.Theme.FevadisProject" />

    <!-- Mismo estilo de botones que en Light -->
    <style name="FevadisButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>
