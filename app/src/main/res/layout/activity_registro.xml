<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F7"
    tools:context=".Registro">

    <!-- Tarjeta centrada -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_fevadis"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEVADIS APP"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No pierdas la oportunidad de ayudar a\nquien lo necesita!"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ======================== -->
            <!--  TABS + INDICADOR MOVIL  -->
            <!-- ======================== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tabsContainer"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Rectángulo deslizante -->
                <View
                    android:id="@+id/tabIndicator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#E5E5E5"
                    android:translationX="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Iniciar sesión -->
                <TextView
                    android:id="@+id/tabLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Iniciar Sesión"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tabRegister" />

                <!-- Registro -->
                <TextView
                    android:id="@+id/tabRegister"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Registrarse"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="10dp"
                    app:layout_constraintStart_toEndOf="@id/tabLogin"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Label DNI -->
            <TextView
                android:id="@+id/dniLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tabsContainer"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Campo DNI -->
            <EditText
                android:id="@+id/dniInput"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:hint="12345678A"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                app:layout_constraintTop_toBottomOf="@id/dniLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botón VERIFICAR DNI -->
            <Button
                android:id="@+id/btnVerificarDni"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Verificar DNI"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_green"
                app:layout_constraintTop_toBottomOf="@id/dniInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
