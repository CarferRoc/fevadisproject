<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo -->
    <solid android:color="#C9DFB9" />

    <!-- Bordes redondeados -->
    <corners android:radius="10dp" />

    <!-- Borde fino -->
    <stroke
        android:width="1dp"
        android:color="#A5B79B" />

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
